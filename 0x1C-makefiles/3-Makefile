CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=/bin/rm -f
all:$(NAME)
$(NAME):$(OBJ)
	$(CC) $(OBJ) -o $(NAME)
%.o:%.c
	$(CC) -c $< -o $@
clean:
	$(RM) ~* $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) ~* $(NAME)
	$(RM) $(OBJ)
re:
	$(RM) $(OBJ)
	$(CC) -c main.c -o main.o
	$(CC) -c school.c -o school.o
	$(CC) $(OBJ) -o $(NAME)
.PHONY: all clean oclean fclean re
